@namespace BlogCart.Shared.MainLayouts

<MudDrawer @bind-Open="SideBarOpen" Elevation="10">
    <MudDrawerHeader>
        <MudText Typo="Typo.h5" Color="Color.Default" Style="margin-top:15px; margin-left:5px;">LightningBits.net</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudDivider DividerType="DividerType.FullWidth" Class="my-6" />
        <MudNavGroup Title="My Blog" Expanded="false" Color="Color.Dark">
            <MudNavLink Href="/lightningbits/blog" Icon="@Icons.Material.Filled.ReadMore" Match="NavLinkMatch.Prefix">Read Me</MudNavLink>
        </MudNavGroup>
        <MudNavGroup Title="My Store" Expanded="false" Color="Color.Dark">
            <MudNavLink Href="/lightningbits/products/product-services" Icon="@Icons.Material.Filled.Code" Match="NavLinkMatch.Prefix">Software Services</MudNavLink>
            <MudNavGroup Title="My Demo Shops" Expanded="false" Color="Color.Dark">
                <MudNavLink Href="/lightningbits/ThriftBoss" Icon="@Icons.Material.Filled.ShoppingBag" Match="NavLinkMatch.Prefix">Demo-ThriftBoss</MudNavLink>
                @*<MudNavLink Href="/ServerPreview" Icon="@Icons.Material.Filled.Dashboard" Match="NavLinkMatch.Prefix">Demo-AdminView</MudNavLink>*@
            </MudNavGroup>
        </MudNavGroup>
        <MudNavGroup Title="My Portfolio" Expanded="false" Color="Color.Dark">
            <MudNavLink Href="/lightningbits/about" Icon="@Icons.Material.Filled.ReadMore" Match="NavLinkMatch.Prefix">About Me</MudNavLink>
        </MudNavGroup>
        <MudDivider DividerType="DividerType.Middle" Class="my-6" />
        <MudNavGroup Title="Contact" Expanded="false" Color="Color.Dark">
            <MudNavLink Href="mailto:RafaelMorel@LightningBits.com" Icon="@Icons.Material.Filled.Email" Match="NavLinkMatch.Prefix">E-Mail</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Filled.Chat" Match="NavLinkMatch.Prefix">MyChat Coming Soon</MudNavLink>
        </MudNavGroup>
    </MudNavMenu>
</MudDrawer>


@code {
    [Parameter]
    public bool SideBarOpen { get; set; }
    public string LocalHost = "https://myblog.lightningbits.net";
}