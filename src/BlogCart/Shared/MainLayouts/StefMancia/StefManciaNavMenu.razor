@namespace BlogCart.Shared.MainLayouts
<MudDrawer @bind-Open="SideBarOpen" Elevation="10">
    <MudDrawerHeader>
        <MudText Typo="Typo.h5" Color="Color.Default" Style="margin-top:15px; margin-left:5px;">StefMancia.com</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudDivider DividerType="DividerType.FullWidth" Class="my-6" />
        <MudNavGroup Title="My Blog" Expanded="false" Color="Color.Dark">
            <MudNavLink Href="/stefmancia/blog-home" Icon="@Icons.Material.Filled.ReadMore" Match="NavLinkMatch.Prefix">Read Me</MudNavLink>
        </MudNavGroup>
        <MudNavGroup Title="My Store" Expanded="false" Color="Color.Dark">
            <MudNavLink Href="/" Icon="@Icons.Material.Filled.ShoppingBag" Match="NavLinkMatch.Prefix">Services/products</MudNavLink>
        </MudNavGroup>
        <MudNavGroup Title="My Portfolio" Expanded="false" Color="Color.Dark">
            <MudNavLink Href="/stefaniamancia/aboutme" Icon="@Icons.Material.Filled.ReadMore" Match="NavLinkMatch.Prefix">About Me</MudNavLink>
        </MudNavGroup>
        <MudDivider DividerType="DividerType.Middle" Class="my-6" />
        <MudNavLink Href="/stefmancia/contact" Icon="@Icons.Material.Filled.ContactPage" Match="NavLinkMatch.Prefix" Style="text-align">Contact me</MudNavLink>
    </MudNavMenu>
</MudDrawer>


@code {
    [Parameter]
    public bool SideBarOpen { get; set; }
}