
        <MudDrawer @bind-Open="SideBarOpen" Elevation="20">
            <MudDrawerHeader>
                <MudText Typo="Typo.h5" Color="Color.Default" Style="margin-top:15px; margin-left:5px;">LightningBits.net</MudText>
            </MudDrawerHeader>
            <MudNavMenu>
                <MudDivider DividerType="DividerType.FullWidth" Class="my-6" />
                <MudNavGroup Title="MyBlog" Expanded="false" Color="Color.Dark">
                    <MudNavLink Href="@($"{LocalHost}/BlogViewHome")" Icon="@Icons.Material.Filled.ReadMore" Match="NavLinkMatch.Prefix">Read Me</MudNavLink>
                </MudNavGroup>
                <MudNavGroup Title="MyStore" Expanded="false" Color="Color.Dark">
                    <MudNavLink Href="/services" Icon="@Icons.Material.Filled.Code" Match="NavLinkMatch.Prefix">Software Services</MudNavLink>
                    <MudNavGroup Title="My Demo Shops" Expanded="false" Color="Color.Dark">
                        <MudNavLink Href="/ThriftBoss" Icon="@Icons.Material.Filled.ShoppingBag" Match="NavLinkMatch.Prefix">Demo-ThriftBoss</MudNavLink>
                        @*<MudNavLink Href="/ServerPreview" Icon="@Icons.Material.Filled.Dashboard" Match="NavLinkMatch.Prefix">Demo-AdminView</MudNavLink>*@
                    </MudNavGroup>
                </MudNavGroup>
                <MudNavGroup Title="MyPortfolio" Expanded="false" Color="Color.Dark">
                    <MudNavLink Href="@($"{LocalHost}/portfolio")" Icon="@Icons.Material.Filled.ReadMore" Match="NavLinkMatch.Prefix">About Me</MudNavLink>
                </MudNavGroup>
                <MudDivider DividerType="DividerType.Middle" Class="my-6" />
                <MudNavGroup Title="Contact" Expanded="false" Color="Color.Dark">
                    <MudNavLink Href="mailto:RafaelMorel@LightningBits.com" Icon="@Icons.Material.Filled.Email" Match="NavLinkMatch.Prefix">E-Mail</MudNavLink>
                    <MudNavLink Icon="@Icons.Material.Filled.Chat" Match="NavLinkMatch.Prefix">MyChat Coming Soon</MudNavLink>
                </MudNavGroup>
            </MudNavMenu>
            @*<MudButton Href="/login" StartIcon="@Icons.Material.Filled.Login" Variant="Variant.Filled" Size="Size.Small" Color="Color.Inherit">Login/Register</MudButton>*@
            @*<MudDivider DividerType="DividerType.Middle" Class="my-6" />
            <MudButton Href="/Services" Variant="Variant.Filled" Size="Size.Small" Color="Color.Inherit">SaaS (Software as a Service)</MudButton>
            <MudDivider DividerType="DividerType.Middle" Class="my-6" />
            <MudButton Href="@($"{LocalHost}/portfolio")" StartIcon="@Icons.Material.Filled.DataObject" Variant="Variant.Filled" Size="Size.Small" Color="Color.Inherit">My Portfolio</MudButton>*@
        </MudDrawer>


@code {
    [Parameter]
    public bool SideBarOpen { get; set; }
